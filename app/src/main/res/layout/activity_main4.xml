<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/songTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Song"
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Artist : "
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintBottom_toTopOf="@+id/reasonTextView"
        app:layout_constraintStart_toEndOf="@+id/songTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="Artist"
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintBottom_toTopOf="@+id/reasonTextView"
        app:layout_constraintStart_toEndOf="@+id/artist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/reasonTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Reason"
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTextView" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reasonTextView" />

    <TextView
        android:id="@+id/songTextView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"
        android:text="Song"
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintBottom_toTopOf="@+id/reasonTextView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/artist2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"
        android:text="Artist : "
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintBottom_toTopOf="@+id/reasonTextView2"
        app:layout_constraintStart_toEndOf="@+id/songTextView2" />

    <TextView
        android:id="@+id/artistTextView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="18dp"
        android:text="Artist"
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintBottom_toTopOf="@+id/reasonTextView2"
        app:layout_constraintStart_toStartOf="@+id/artist2" />

    <TextView
        android:id="@+id/reasonTextView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:text="Reason"
        android:textSize="18sp"
        android:fontFamily="@font/lxgwwenkaimonotc_bold"
        app:layout_constraintBottom_toTopOf="@+id/youtube_player_view2"
        app:layout_constraintStart_toStartOf="parent" />

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>